<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/defaultbackground"
        tools:context=".MainActivity">
    <Button
            android:text="Obtine Ticket"
            android:layout_width="166dp"
            android:layout_height="74dp"
            android:id="@+id/btn_queue"
            android:enabled="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.736" android:textSize="18sp"/>
    <TextView
            android:text="Este randul tau !!"
            android:layout_width="308dp"
            android:layout_height="36dp"
            android:id="@+id/text_turn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.494"
            android:textColor="#E00000" android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/textUniversitatea"
            android:visibility="invisible"/>
    <TextView
            android:text="Universitatea Politehnica Timisoara"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:id="@+id/textUniversitatea"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="51dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" android:textColor="#030000" android:textAlignment="center"
            android:textSize="19sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/text_turn" android:visibility="invisible"/>
    <TextView
            android:text="Numarul tau la rand :"
            android:layout_width="254dp"
            android:layout_height="31dp"
            android:id="@+id/textView1" android:textColor="#0C0606"
            android:textSize="18sp" android:textAlignment="center" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textUniversitatea" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="79dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="78dp" app:layout_constraintBottom_toTopOf="@+id/textNumarRand"
            app:layout_constraintHorizontal_bias="0.0" android:visibility="invisible"/>
    <TextView
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:id="@+id/textNumarRand"
            app:layout_constraintTop_toBottomOf="@+id/textView1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="123dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp" android:textColor="#110101" android:text="00"
            android:textAlignment="center" android:textSize="100sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:visibility="invisible"/>
    <TextView
            android:text="Numarul cozi:"
            android:layout_width="280dp"
            android:layout_height="32dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textNumarRand" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="51dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="37dp" android:textColor="#160606" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.325" app:layout_constraintBottom_toTopOf="@+id/textNumarCoada"
            android:visibility="invisible" android:textSize="18sp"/>
    <TextView
            android:text="1"
            android:layout_width="86dp"
            android:layout_height="58dp"
            android:id="@+id/textNumarCoada"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="157dp" android:textColor="#1B0606" android:textAlignment="center"
            android:textSize="50sp" app:layout_constraintHorizontal_bias="1.0"
            android:visibility="invisible"/>
    <TextView
            android:text="Persoane in asteptare:"
            android:layout_width="207dp"
            android:layout_height="26dp"
            android:id="@+id/textPers"
            android:textColor="#0C0202" android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="75dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textNumarCoada"
            app:layout_constraintEnd_toStartOf="@+id/textInAateptare"/>
    <TextView
            android:text="1"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:id="@+id/textInAateptare" app:layout_constraintStart_toEndOf="@+id/textPers"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="41dp" android:textColor="#0A0101"
            android:textAlignment="viewStart" android:textSize="18sp" android:visibility="invisible"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>